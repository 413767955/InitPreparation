<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StackCardsView">
        <attr name="maxVisibleCnt" format="integer"/>
        <attr name="edgeHeight" format="dimension"/>
        <attr name="scaleFactor" format="float"/>
        <attr name="alphaFactor" format="float"/>
        <attr name="dismissFactor" format="float"/>
        <attr name="dismissAlpha" format="float"/>
        <attr name="dragSensitivity" format="float"/>
        <attr name="itemWidth" format="dimension"/>
        <attr name="itemHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SwipeCardView">
        <attr name="SwipeFlingStyle" format="reference"/>
        <attr name="rotation_degrees" format="float"/>
        <attr name="min_adapter_stack" format="integer"/>
        <attr name="max_visible" format="integer"/>
        <attr name="left_swipe_detect" format="boolean"/>
        <attr name="right_swipe_detect" format="boolean"/>
        <attr name="top_swipe_detect" format="boolean"/>
        <attr name="bottom_swipe_detect" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SwipePageView">
        <attr name="SwipeFlingPageStyle" format="reference"/>
        <attr name="min_adapter_stack_page" format="integer"/>
        <!--<attr name="max_visible" format="integer"/>-->
    </declare-styleable>

    <declare-styleable name="IndicatorView">
        <attr name="indicatorColor" format="color"/>
        <attr name="indicatorColorSelected" format="color"/>
        <attr name="indicatorWidth" format="integer"/>
        <attr name="gravity" format="integer"/>
    </declare-styleable>

    <declare-styleable name="StateButton">
        <!--text color-->
        <attr name="normalTextColor" format="color"/>
        <attr name="pressedTextColor" format="color"/>
        <attr name="unableTextColor" format="color"/>

        <!--stroke width and color, dash width, dash gap-->
        <attr name="strokeDashWidth" format="dimension"/>
        <attr name="strokeDashGap" format="dimension"/>
        <attr name="normalStrokeWidth" format="dimension"/>
        <attr name="pressedStrokeWidth" format="dimension"/>
        <attr name="unableStrokeWidth" format="dimension"/>
        <attr name="normalStrokeColor" format="color"/>
        <attr name="pressedStrokeColor" format="color"/>
        <attr name="unableStrokeColor" format="color"/>

        <!--background color-->
        <attr name="normalBackgroundColor" format="color"/>
        <attr name="pressedBackgroundColor" format="color"/>
        <attr name="unableBackgroundColor" format="color"/>

        <!--background radius-->
        <attr name="radius" format="dimension"/>
        <attr name="round_r" format="boolean"/>

        <!--animation duration-->
        <attr name="animationDuration" format="integer|reference"/>

    </declare-styleable>


    <declare-styleable name="BubbleView">
        <attr name="arrowWidth" format="dimension" />
        <attr name="angle" format="dimension" />
        <attr name="arrowHeight" format="dimension" />
        <attr name="arrowPosition" format="dimension" />
        <attr name="bubbleColor" format="color" />
        <attr name="arrowLocation" format="enum">
            <enum name="left" value="0x00" />
            <enum name="right" value="0x01" />
            <enum name="top" value="0x02" />
            <enum name="bottom" value="0x03" />
        </attr>
    </declare-styleable>
</resources>