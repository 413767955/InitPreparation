<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="event"
            type="com.dkcr.blibala.ui.setting.SettingActivity.Event" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.setting.SettingActivity">
        <com.hjq.bar.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/setting"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:id="@+id/txt_permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息通知权限"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="@dimen/dp_15"/>
            <TextView
                android:id="@+id/tv_permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/txt_permission"
                app:layout_constraintBottom_toBottomOf="@id/txt_permission"
                android:text="未开启"
                android:drawableEnd="@mipmap/right_gray_img"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/dp_16"
                android:drawablePadding="@dimen/dp_8"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:text="密码修改"
            android:drawableEnd="@mipmap/right_gray_img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:text="帮助与反馈"
            android:drawableEnd="@mipmap/right_gray_img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:text="@string/about_us"
            android:drawableEnd="@mipmap/right_gray_img"
            android:onClick="@{()->event.onAboutUsClick()}"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:text="版本检测"
            android:drawableEnd="@mipmap/right_gray_img"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/color_F2F2F2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:text="退出登录"
            android:gravity="center"
            android:id="@+id/btn_outlogin"/>
    </LinearLayout>
</layout>